
<div class="text-center">
    <% provide(:title, 'Log in') %>
    <h1 class="text-center mt-4">Log in</h1>

    <%= form_for(:session, url: login_path) do |f| %>

        <div class="form-group col-md-4 offset-md-4">
            <div>
                <%= f.email_field :email, placeholder: "Email Address", class: "form-control" %>
            </div>
        </div>
        <div class="form-group col-md-4 offset-md-4">
            <div>
                <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>
        </div>
        <button class= "btn"><%= f.submit 'Log in', class: "btn btn-outline-secondary" %></button>
    <% end %>
    <p> New user? <%= link_to 'Sign up now!', signup_path, class: "text-info" %></p>
</div>