<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :item_category %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :item_description %>
  </div>

  <% if !@item.images.empty? %>
    <% @item.images.each do |image| %>
      <%= image_tag(image, style: 'height:100px;width:auto;') %>
      <%= link_to 'Remove', delete_image_attachment_item_url(image_id: image.id),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
  
  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, :readonly => true %>
    <!--
    <%= form.number_field :user_id, id: :item_user_id %>
    -->
  </div>

  <div class="field">
    <%= form.file_field :images, multiple: true %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
